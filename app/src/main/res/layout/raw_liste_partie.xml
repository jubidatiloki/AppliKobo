<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textStyle="bold"/>

    <TextView android:id="@+id/tvNbManche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:text="0"
        android:layout_below="@id/tvTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" manches"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_below="@id/tvTitle"
        android:layout_toRightOf="@id/tvNbManche"/>


    <TextView android:id="@+id/tvNbJoueurs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:layout_marginLeft="20dp"
        android:layout_below="@id/tvNbManche" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=" joueurs"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:layout_below="@id/tvNbManche"
        android:layout_toRightOf="@id/tvNbJoueurs"/>


</RelativeLayout>